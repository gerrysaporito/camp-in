<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add New Comments to <%= campground.name %></h1>

    <div style="width: 30%; margin: 35px auto;">
      <!-- Form -->
      <form action="/index/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Comment"">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="Author">
        </div>
        <div class="form-group">
          <button class="btn-block btn btn-lg btn-default btn-primary">Submit</button>
        </div>
      </form>

      <a href="/campgrounds">Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
