<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>

    <div style="width: 30%; margin: 35px auto;">
      <!-- Form -->
      <form action="/index/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="campground[price]" placeholder="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <button class="btn-block btn btn-lg btn-default btn-primary">Submit</button>
        </div>
      </form>

      <a href="/campgrounds">Back</a>
    </div>




  </div>
</div>
<% include ../partials/footer %>
